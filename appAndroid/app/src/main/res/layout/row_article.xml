<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingTop="@dimen/margin_x"
    android:paddingBottom="@dimen/margin"
    android:paddingLeft="@dimen/margin_x"
    android:paddingRight="@dimen/margin_x">


    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Type something ype something ype something."
        android:textColor="@color/black"
        android:textSize="14dp"/>

    <TextView
        android:id="@+id/tvAuthorTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_ss"
        android:text="Manuel - 2m"
        android:textSize="10dp"/>

</LinearLayout>